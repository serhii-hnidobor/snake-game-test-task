{
  "extends": "../tsconfig.json",
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@repositories/*": [
        "src/repositories/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@helpers/*": [
        "src/helpers/*"
      ],
      "@": [
        "src"
      ],
      "@repositories": [
        "src/repositories"
      ],
      "@config": [
        "src/config"
      ],
      "@services": [
        "src/services"
      ],
      "@middlewares": [
        "src/middlewares"
      ],
      "@routes": [
        "src/routes"
      ],
      "@helpers": [
        "src/helpers"
      ]
    },
    "outDir": "build",
    "target": "es2017",
    "lib": [
      "es2020"
    ],
    "moduleResolution": "nodenext",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}