{
  "extends": "../tsconfig.json",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "outDir": "dist",
    "declaration": true,
    "target": "es2017",
    "lib": [
      "es2020"
    ],
    "moduleResolution": "nodenext",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}